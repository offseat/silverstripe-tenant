{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 120
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
